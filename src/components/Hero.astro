---
import logo1 from '../images/client-databiz.svg';
import logo2 from '../images/client-audiophile.svg';
import logo3 from '../images/client-meet.svg';
import logo4 from '../images/client-maker.svg';

const logos = [logo1, logo2, logo3, logo4];
---

<section class="hero">
    <h1 class="hero__title">Make remote work</h1>
    <p class="hero__text">Get your team in sync, no matter your location. Streamline processes, create team rituals, and watch productivity soar.</p>
    <a href="/" class="btn">Learn more</a>
    <div class="hero__logos">
        {logos.map((logo) => (
            <div>
                <img src={logo} alt="logo" />
            </div>
        ))}
    </div>
</section>

<style lang="scss">
    .hero {
        text-align: center;
        margin-top: 48px;
        padding: 0 16px;

        @media (min-width: 768px) {
            text-align: left;
            margin-top: 0;
            padding: 0;
            margin-bottom: -8px;
		}

        &__title {
            margin-bottom: 16px;
            font-size: var(--fs-header_mob);
            color: var(--clr-900);
            letter-spacing: -0.5px;
            font-weight: var(--fw-bold);
            line-height: 1.17;

            @media (min-width: 768px) {
                margin-bottom: 30px;
                font-size: var(--fs-header_tablet);
                line-height: 1;
                letter-spacing: -1.11px;
            }
            @media (min-width: 1024px) {
                margin-bottom: 48px;
                font-size: var(--fs-header_desktop);
                line-height: 1;
                max-width: 520px;
            }
        }

        &__text {
            margin-bottom: 24px;

            @media (min-width: 768px) {
                margin-bottom: 30px;
            }
            
            @media (min-width: 1024px) {
                max-width: 445px;
                margin-bottom: 51px;
            }
        }

        &__logos {
            margin-top: 48px;
            gap: 28px;
            display: flex;
            align-items: center;
            justify-content: center;

            @media (min-width: 768px) {
                margin-top: 50px;
                gap: 40px;
                justify-content: flex-start;
            }

            @media (min-width: 1024px) {
                margin-top: 108px;
                gap: 40px;
                justify-content: flex-start;
            }
        }
    }

    .btn {
        color: var(--clr-100);
        background-color: var(--clr-900);
        padding: 11px 24px 9px;
        border-radius: 15px;
        font-weight: var(--fw-bold);
        letter-spacing: -0.222px;
        display: inline-block;
        border: 1px solid var(--clr-900);

        transition: all 0.3s;

        &:hover {
            border-color: var(--clr-500);
            color: var(--clr-500);
            background-color: transparent;
        }

        @media (min-width: 768px) {
            padding: 14px 30px 12px;
            letter-spacing: -0.25px;
        }
    }
</style>